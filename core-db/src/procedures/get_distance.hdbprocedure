PROCEDURE "get_distance" (
		  IN im_point_1 ST_GEOMETRY, 
          IN im_point_2 ST_GEOMETRY,
          OUT ex_distance double )
   LANGUAGE SQLSCRIPT
   SQL SECURITY INVOKER
   READS SQL DATA AS
BEGIN

 ex_distance =  :im_point_1.st_distance(:im_point_2, 'kilometer');

END


